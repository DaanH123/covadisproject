<PageTitle>Trips for Reservation</PageTitle>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (Trips == null || !Trips.Any())
{
    <p>No trips found for this reservation.</p>
}
else
{
    <div class="overflow-x-auto mx-[2.5%] my-10">
        <table class="w-[95%] bg-white border border-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Trip ID</th>
                    <th class="border px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Odometer Start</th>
                    <th class="border px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Odometer End</th>
                    <th class="border px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Addresses</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trip in Trips)
                {
                    <tr class="even:bg-gray-50 odd:bg-white">
                        <td class="border px-5 py-5 text-sm">@trip.Id</td>
                        <td class="border px-5 py-5 text-sm">@trip.OdometerStart</td>
                        <td class="border px-5 py-5 text-sm">@trip.OdometerEnd</td>
                        <td class="border px-5 py-5 text-sm">
                            @if (trip.Addresses != null)
                            {
                                <ul>
                                    @foreach (var address in trip.Addresses)
                                    {
                                        <li>@address.Street, @address.City, @address.Country</li>
                                    }
                                </ul>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
